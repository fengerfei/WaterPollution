<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/up"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/head_left"
        style="@style/style_12_BEBEBE_BOLD"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/lists"
        android:gravity="center_vertical|center" />

    <LinearLayout
        android:id="@+id/head_center"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center" >
		<Button 
		    android:id="@+id/btnStandard"
		    android:layout_width="50dp"
        	android:layout_height="30dp"
		    android:visibility="invisible"
		    android:text="标准"
		    android:textColor="@android:color/white"
		    android:background="@drawable/standardpressed"/>
        <TextView
            android:id="@+id/head_title"
            style="@style/style_20_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button 
		    android:id="@+id/btnSatellite"
		    android:layout_width="50dp"
        	android:layout_height="30dp"
		    android:visibility="invisible"
		    android:textColor="@android:color/white"
		    android:text="卫星"
		    android:background="@drawable/satellite"/>
    </LinearLayout>

    <TextView
        android:id="@+id/head_right"
        style="@style/style_12_BEBEBE_BOLD"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/loadpress"
        android:gravity="center_vertical|center"/>

</LinearLayout>